# Spotify Web API credentials
# Create an app at https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_client_id_here
SPOTIFY_CLIENT_SECRET=your_client_secret_here

# Obtain once by running: python sync/get_token.py
# Requires scopes: user-modify-playback-state user-read-playback-state user-read-currently-playing
SPOTIFY_REFRESH_TOKEN=your_refresh_token_here

# Name of the Spotify Connect device to play on (as shown in the Spotify app)
SPOTIFY_DEVICE_NAME=Keuken

# Google Sheets logging (optional)
# GOOGLE_SHEETS_ID=your_spreadsheet_id_here
# GOOGLE_SHEETS_CREDENTIALS_PATH=/path/to/service-account.json
